/* pages/welcome/welcome.wxss */

.wc {
  margin-top: 400rpx;
 
}


/**index.wxss**/
.header{
  width: 100%;
  position: fixed;
  left: 0;
  top:0;
  z-index: 200;
  background-color: #fff;
}

.input-box{
  border: 1px solid #eee;
  background-color: #eee;
  margin: 15rpx 10rpx;
  text-align: center;
  border-radius: 20rpx;
  height: 60rpx;
  font-size: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search-input{
  width: 100%;
}
.swiper{
  margin-top: 100rpx;
  height: 400rpx;
  width: 100%;
}
.swiper image {
 height: 100%;
 width: 100%;
}
.horizontal-slider{
  margin: 30rpx 0 20rpx 0;
  -webkit-overflow-scrolling: touch;
}

.horizontal-slider .item{
  display: inline-block;
  margin-left: 60rpx;
  text-align: center
}
.horizontal-slider .item:first-child{
  margin-left: 40rpx;
}
.horizontal-slider .item .iconfont{
  font-size: 50rpx;
}
.horizontal-slider .item text{
  font-size: 30rpx;
}
.item>view{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 90rpx;
}
.ski view{
  border: 1px solid #3e81ff;
}
.ski .iconfont{
  color: #3e81ff;
}
.onfoot view{
  border: 1px solid #a8ee7d;
}
.onfoot .iconfont{
  color: #a8ee7d;
}
.rock view{
  border: 1px solid #f3415e;
}
.rock .iconfont{
  color: #f3415e;
}
.mountain view{
  border: 1px solid #cd9854;
}
.mountain .iconfont{
  color: #cd9854;
}
.drive view{
  border: 1px solid #eb99dd;
}
.drive .iconfont{
  color: #eb99dd;
}
.match view{
  border: 1px solid #6581a8;
}
.match .iconfont{
  color: #6581a8;
}


.toast_content_box {  
  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;  
  z-index: 999;  
}  
.toast_content {  
  width: 50%;  
  padding: 20rpx;  
  background: rgba(0, 0, 0, .65);  
  border-radius: 8rpx;  
}  
.toast_content_text {  
  height: 100%;  
  width: 100%;  
  color: #fff;  
  font-size: 28rpx;  
  text-align: center;  
} 